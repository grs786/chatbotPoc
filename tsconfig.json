{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,    
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".", // Ensure this is set to the root of your project
    // "paths": {
    //   "@env": ["react-native-dotenv.d.ts"] // Add this line for custom path resolution
    // }
  },
 "include": [
    "src/**/*",
    "react-native-dotenv.d.ts" // Include your custom declaration file
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts" // Exclude test files if any
  ],
}
